<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?bgWhite" />
            <corners android:radius="80dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerColor="#99ABABAB"
                android:centerX="1"
                android:endColor="#99878787"
                android:startColor="#99CCCCCC" />

            <corners android:radius="80dp" />
        </shape>
    </item>
    <item
        android:bottom="1px"
        android:left="1px"
        android:right="1px"
        android:top="2px">
        <shape android:shape="rectangle">
            <solid android:color="?bgWhite" />
            <corners android:radius="80dp" />
        </shape>
    </item>
</layer-list>