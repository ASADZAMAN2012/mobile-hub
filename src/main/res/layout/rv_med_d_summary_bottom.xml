<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_6"
    android:background="@drawable/bg_rounded_white_ripple_item"
    android:paddingBottom="@dimen/dp_30"
    app:cardCornerRadius="@dimen/dp_10"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/med_d_summary_copay_total_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/med_d_summary_copay_total"
            style="@style/H6RegBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_74"
            android:gravity="center"
            android:text="@string/med_d_checkout_vaccine_copay_total"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/med_d_summary_copay_subtotal"
            style="@style/H6BoldBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_30"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="$60.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/med_d_summary_valid_on_file_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:layout_marginStart="@dimen/dp_74"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@id/med_d_summary_copay_total_layout"
        app:layout_constraintTop_toBottomOf="@id/med_d_summary_copay_total_layout">

        <TextView
            android:id="@+id/med_d_summary_valid_on_file"
            style="@style/H7BoldBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/self_pay_valid_card_on_file"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/med_d_summary_cash_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:layout_marginStart="@dimen/dp_74"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@id/med_d_summary_copay_total_layout"
        app:layout_constraintTop_toBottomOf="@id/med_d_summary_copay_total_layout">

        <TextView
            android:id="@+id/med_d_summary_cash"
            style="@style/H7BoldBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/self_pay_dialog_cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/med_d_summary_cash_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_22"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/med_d_summary_cash"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/med_d_summary_copay_card_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:layout_marginStart="@dimen/dp_74"
        app:layout_constraintStart_toStartOf="@id/med_d_summary_copay_total_layout"
        app:layout_constraintTop_toBottomOf="@id/med_d_summary_copay_total_layout">

        <ImageView
            android:id="@+id/med_d_summary_copay_card_icon"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_36"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/med_d_summary_copay_card_brand"
            style="@style/H7BoldBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_17"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/med_d_summary_copay_card_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginStart="0dp"
            tools:text="Visa..." />

        <TextView
            android:id="@+id/med_d_summary_copay_card_number"
            style="@style/H7RegBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/med_d_summary_copay_card_brand"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="9101" />

        <ImageView
            android:id="@+id/med_d_summary_card_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_22"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/med_d_summary_copay_card_number"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/med_d_summary_phone_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:layout_marginStart="@dimen/dp_74"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@id/med_d_summary_copay_total_layout"
        app:layout_constraintTop_toBottomOf="@id/med_d_summary_copay_total_layout">

        <TextView
            android:id="@+id/med_d_summary_phone"
            style="@style/H7BoldBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/med_d_summary_copay_pay_by_phone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/med_d_summary_phone_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_22"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/med_d_summary_phone"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/med_d_summary_copay_card_info"
        style="@style/H7RegBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_74"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_74"
        android:text="@string/med_d_summary_copay_with_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/med_d_summary_copay_card_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>