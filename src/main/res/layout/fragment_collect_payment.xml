<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.vaxcare.vaxhub.core.view.VaxToolbar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/med_d_copay_title" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/med_d_copay_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_50">

            <TextView
                android:id="@+id/med_d_copay_invalid_info"
                style="@style/BodyItalicBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_43"
                android:text="@string/med_d_copay_invalid_info"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

            <View
                android:id="@+id/med_d_copay_bg_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_38"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@drawable/bg_rounded_corner_lightest_yellow"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/med_d_copay_invalid_info"
                app:layout_goneMarginTop="@dimen/dp_93"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/med_d_copay_card_number_title"
                style="@style/BodySmlBoldBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_89"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/med_d_copay_card_number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/med_d_copay_bg_number" />

            <com.vaxcare.vaxhub.core.view.card.CardNumberEditText
                android:id="@+id/med_d_copay_card_number"
                style="@style/H6RegBlack"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:layout_marginHorizontal="@dimen/dp_53"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@drawable/bg_input"
                android:digits="1234567890"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:paddingHorizontal="@dimen/dp_35"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/med_d_copay_card_number_title" />

            <TextView
                android:id="@+id/med_d_copay_expiration_title"
                style="@style/BodySmlBoldBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_89"
                android:layout_marginTop="@dimen/dp_40"
                android:text="@string/med_d_copay_expiration"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/med_d_copay_card_number" />

            <TextView
                android:id="@+id/med_d_copay_expiration_month"
                style="@style/H6RegBlack"
                android:layout_width="@dimen/dp_165"
                android:layout_height="@dimen/dp_80"
                android:layout_marginStart="@dimen/dp_53"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@drawable/bg_rounded_corner_left"
                android:focusable="false"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/med_d_copay_expiration_title" />

            <TextView
                android:id="@+id/med_d_copay_expiration_year"
                style="@style/H6RegBlack"
                android:layout_width="@dimen/dp_165"
                android:layout_height="@dimen/dp_80"
                android:layout_marginStart="@dimen/dp_29"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_53"
                android:background="@drawable/bg_rounded_corner_right"
                android:focusable="false"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@id/med_d_copay_expiration_month"
                app:layout_constraintTop_toBottomOf="@id/med_d_copay_expiration_title" />

            <TextView
                android:id="@+id/med_d_copay_card_name_title"
                style="@style/BodySmlBoldBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_89"
                android:layout_marginTop="@dimen/dp_40"
                android:text="@string/med_d_copay_card_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/med_d_copay_expiration_month" />

            <EditText
                android:id="@+id/med_d_copay_card_name"
                style="@style/H6RegBlack"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:layout_marginHorizontal="@dimen/dp_53"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@drawable/bg_input"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingHorizontal="@dimen/dp_35"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/med_d_copay_card_name_title" />

            <TextView
                android:id="@+id/med_d_copay_add_phone_title"
                style="@style/BodySmlBoldBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_89"
                android:layout_marginTop="@dimen/dp_40"
                android:text="@string/med_d_copay_phone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/med_d_copay_card_name" />

            <EditText
                android:id="@+id/med_d_copay_add_phone_start"
                style="@style/H6RegBlack"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_marginStart="@dimen/dp_53"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@drawable/bg_rounded_corner_left"
                android:digits="1234567890"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="3"
                app:layout_constraintEnd_toStartOf="@id/med_d_copay_add_phone_mid"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/med_d_copay_add_phone_title" />

            <EditText
                android:id="@+id/med_d_copay_add_phone_mid"
                style="@style/H6RegBlack"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_80"
                android:layout_marginHorizontal="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@drawable/bg_rounded_corner_mid"
                android:digits="1234567890"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="3"
                app:layout_constraintEnd_toStartOf="@id/med_d_copay_add_phone_end"
                app:layout_constraintStart_toEndOf="@id/med_d_copay_add_phone_start"
                app:layout_constraintTop_toBottomOf="@id/med_d_copay_add_phone_title" />

            <EditText
                android:id="@+id/med_d_copay_add_phone_end"
                style="@style/H6RegBlack"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_53"
                android:background="@drawable/bg_rounded_corner_right"
                android:digits="1234567890"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/med_d_copay_add_phone_mid"
                app:layout_constraintTop_toBottomOf="@id/med_d_copay_add_phone_title" />

            <TextView
                android:id="@+id/med_d_copay_email_title"
                style="@style/BodySmlBoldBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_89"
                android:layout_marginTop="@dimen/dp_40"
                android:text="@string/med_d_copay_email"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/med_d_copay_add_phone_start" />

            <EditText
                android:id="@+id/med_d_copay_email"
                style="@style/H6RegBlack"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:layout_marginHorizontal="@dimen/dp_53"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@drawable/bg_input"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="@dimen/dp_35"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/med_d_copay_email_title" />

            <TextView
                android:id="@+id/med_d_copay_charge_message"
                style="@style/BodyItalicBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_50"
                android:text="@string/med_d_copay_charge_message"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/med_d_copay_email" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/med_d_copay_save"
        style="@style/PrimaryPurpleButton"
        android:layout_width="@dimen/dp_420"
        android:layout_height="@dimen/dp_110"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_60"
        android:enabled="false"
        android:text="@string/med_d_copay_save"
        app:layout_constraintBottom_toTopOf="@id/med_d_no_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/med_d_no_card"
        style="@style/CtaBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_88"
        android:text="@string/patient_add_capture_no_card"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>