<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dp_42"
    android:paddingHorizontal="@dimen/dp_30"
    android:paddingVertical="@dimen/dp_60">

    <TextView
        android:id="@+id/textView_title"
        style="@style/H6BoldBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/trouble_connecting_dialog_title"
        android:textAlignment="center"
        android:textSize="@dimen/sp_35"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_body"
        style="@style/H6RegBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textSize="@dimen/sp_30"
        app:layout_constraintTop_toBottomOf="@id/textView_title"
        tools:layout_editor_absoluteX="10dp"
        tools:text="To create a new patient, make sure you have a WiFi or cellular connection." />

    <Button
        android:id="@+id/button_tryAgain"
        style="@style/PrimaryPurpleButton"
        android:layout_width="@dimen/dp_400"
        android:layout_height="@dimen/dp_105"
        android:layout_marginTop="45dp"
        android:text="@string/trouble_connecting_dialog_try_again"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_body" />

    <Button
        android:id="@+id/button_ok"
        style="@style/PrimaryGrayButton"
        android:layout_width="@dimen/dp_400"
        android:layout_height="@dimen/dp_105"
        android:text="@string/button_ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_tryAgain" />

</androidx.constraintlayout.widget.ConstraintLayout>