<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lot_row_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/lot_row_add_button_height"
    android:layout_marginTop="@dimen/dp_26"
    android:layout_marginBottom="@dimen/dp_36"
    tools:context="com.vaxcare.vaxhub.ui.checkout.LotLookupFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/lot_row_btn"
        style="@style/PrimaryPurpleButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/dp_120"
        android:gravity="center"
        android:text="@string/add_new_lot_number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>