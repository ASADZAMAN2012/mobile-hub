<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/dose_series_check"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_67"
        android:scaleType="centerInside"
        android:src="@drawable/ic_check_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/patient_dose_series_text"
        style="@style/H6RegBlack"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_67"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_10"
        android:text="@string/dose_series_fmt"
        app:layout_constraintBottom_toBottomOf="@id/dose_series_check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dose_series_check"
        app:layout_constraintTop_toTopOf="@id/dose_series_check" />

</androidx.constraintlayout.widget.ConstraintLayout>