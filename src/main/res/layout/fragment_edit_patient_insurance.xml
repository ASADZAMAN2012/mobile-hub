<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <com.vaxcare.vaxhub.core.view.VaxToolbar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tap_to_capture_label"
        style="@style/H4RegBlack"
        android:fontFamily="@font/graphik_regular"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textAlignment="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/patient_edit_tap_to_capture"
        android:layout_marginTop="@dimen/dp_30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar" />

    <TextView
        android:id="@+id/patient_edit_front_card_label"
        style="@style/BodyBoldBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="@string/patient_edit_front_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tap_to_capture_label" />

    <androidx.cardview.widget.CardView
        android:id="@+id/patient_edit_front_card_capture_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_388"
        android:layout_marginHorizontal="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_22"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/patient_edit_front_card_label">

        <com.vaxcare.vaxhub.core.ui.ViewfinderView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/primary_gray_transparent_20"
            app:inner_corner_color="@color/primary_purple"
            app:inner_corner_length_horizontal="@dimen/dp_50"
            app:inner_corner_length_vertical="@dimen/dp_36"
            app:inner_width="@dimen/dp_554"
            app:inner_height="@dimen/dp_382"
            app:inner_stroke_width="@dimen/dp_6"
            app:mask_color="@color/background_color"
            app:show_mask="true" />

        <ImageView
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_gravity="center"
            android:src="@drawable/ic_camera" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/patient_edit_front_card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_388"
        android:layout_marginHorizontal="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_22"
        android:visibility="invisible"
        app:cardCornerRadius="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/patient_edit_front_card_label">

        <ImageView
            android:id="@+id/patient_edit_front_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/patient_edit_back_card_label"
        style="@style/BodyBoldBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_52"
        android:text="@string/patient_edit_back_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/patient_edit_front_card_view" />

    <androidx.cardview.widget.CardView
        android:id="@+id/patient_edit_back_card_capture_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_388"
        android:layout_marginHorizontal="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_22"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/patient_edit_back_card_label">

        <com.vaxcare.vaxhub.core.ui.ViewfinderView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/primary_gray_transparent_20"
            app:inner_corner_color="@color/primary_purple"
            app:inner_corner_length_horizontal="@dimen/dp_50"
            app:inner_corner_length_vertical="@dimen/dp_36"
            app:inner_width="@dimen/dp_554"
            app:inner_height="@dimen/dp_382"
            app:inner_stroke_width="@dimen/dp_6"
            app:mask_color="@color/background_color"
            app:show_mask="true" />

        <ImageView
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_gravity="center"
            android:src="@drawable/ic_camera" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/patient_edit_back_card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_388"
        android:layout_marginHorizontal="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_22"
        android:visibility="invisible"
        app:cardCornerRadius="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/patient_edit_back_card_label">

        <ImageView
            android:id="@+id/patient_edit_back_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/patient_edit_no_insurance_card"
        style="@style/BodyBoldBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_26"
        android:layout_marginTop="@dimen/dp_80"
        android:text="@string/patient_edit_no_insurance_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/patient_edit_back_card_view" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_next"
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_32"
        android:layout_marginBottom="@dimen/dp_74"
        android:src="@drawable/ic_arrow_forward"
        android:visibility="gone"
        app:backgroundTint="@color/legacy_fab_bg"
        app:elevation="@dimen/dp_2"
        app:fabCustomSize="@dimen/dp_106"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="@dimen/dp_64"
        app:rippleColor="@color/primary_white"
        app:tint="@color/primary_white" />


</androidx.constraintlayout.widget.ConstraintLayout>