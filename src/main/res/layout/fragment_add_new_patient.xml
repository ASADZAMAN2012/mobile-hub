<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context="com.vaxcare.vaxhub.ui.patient.AddNewPatientFragment">

    <com.vaxcare.vaxhub.core.view.VaxToolbar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/patient_add_title" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_177">

            <androidx.cardview.widget.CardView
                android:id="@+id/view_finder_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_230"
                android:layout_marginHorizontal="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_30"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" >

                <FrameLayout
                    android:id="@+id/scanner_preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

                <com.vaxcare.vaxhub.core.ui.ViewfinderWithOutsideCrossHair
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView_addLotDescription"
                style="@style/BodyItalicBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="@dimen/dp_26"
                android:gravity="center"
                android:text="@string/patient_add_scan_barcode"
                android:textSize="14sp"
                android:lineHeight="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_finder_container"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintVertical_chainStyle="packed" />

            <com.vaxcare.vaxhub.core.view.RoundedTextInputView
                android:id="@+id/roundedTextInput_AddFirstName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_addLotDescription"
                app:label_style="@style/H7BoldBlack"
                app:label="@string/patient_add_first_name"
                app:required="true"
                android:inputType="textCapWords|textNoSuggestions"
                app:error_label="@string/patient_add_required_field" />

            <com.vaxcare.vaxhub.core.view.RoundedTextInputView
                android:id="@+id/roundedTextInput_addLastName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/roundedTextInput_AddFirstName"
                app:label_style="@style/H7BoldBlack"
                app:label="@string/patient_add_last_name"
                app:required="true"
                android:inputType="textCapWords|textNoSuggestions"
                android:imeOptions="actionDone"
                app:error_label="@string/patient_add_required_field" />

            <com.vaxcare.vaxhub.core.view.DateOfBirthView
                android:id="@+id/dateView_addBirthDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/roundedTextInput_addLastName"
                app:label_style="@style/H7BoldBlack"
                app:label="@string/patient_add_date_of_birth"
                app:required="true" />

            <TextView
                android:id="@+id/textView_addGenderTitle"
                style="@style/H7BoldBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_89"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/patient_add_gender"
                app:required="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dateView_addBirthDate" />

            <TextView
                android:id="@+id/textView_genderRequired"
                style="@style/H33ItalicBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/graphik_regular_italic"
                android:textColor="@color/primary_dark_gray"
                android:textSize="15sp"
                android:text="@string/required"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/textView_addGenderTitle"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/textView_addGender"
                style="@style/H6RegBlack"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:layout_marginHorizontal="@dimen/dp_53"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_picker_input"
                android:focusable="false"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dp_35"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_addGenderTitle" />

            <ImageView
                android:id="@+id/imageView_addGenderDropdownIcon"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginEnd="@dimen/dp_30"
                android:rotation="270"
                android:scaleType="centerInside"
                android:src="@drawable/ic_back"
                app:layout_constraintBottom_toBottomOf="@id/textView_addGender"
                app:layout_constraintEnd_toEndOf="@id/textView_addGender"
                app:layout_constraintTop_toTopOf="@id/textView_addGender" />

            <TextView
                android:id="@+id/textView_addGenderError"
                style="@style/H33ItalicBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/graphik_regular_italic"
                android:textColor="@color/error_red"
                android:textSize="15sp"
                android:text="@string/patient_add_select_gender"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="@id/textView_addGenderTitle"
                app:layout_constraintTop_toBottomOf="@id/textView_addGender"
                tools:visibility="visible" />

            <com.vaxcare.vaxhub.core.view.PhoneNumberEditView
                android:id="@+id/phoneView_addPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_addGenderError"
                app:required="true" />

            <com.vaxcare.vaxhub.core.view.RoundedTextInputView
                android:id="@+id/roundedTextInput_addSsn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/phoneView_addPhone"
                app:label_style="@style/H7BoldBlack"
                app:label="SSN"
                android:inputType="number"
                app:required="false" />

            <com.vaxcare.vaxhub.core.view.RoundedTextInputView
                android:id="@+id/roundedTextInput_addMbi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/roundedTextInput_addSsn"
                app:label_style="@style/H7BoldBlack"
                app:label="MBI"
                android:inputType="textCapCharacters|textNoSuggestions"
                app:required="false"
                app:subtext="Medicare Beneficiary Identifier"/>

            <TextView
                android:id="@+id/textView_addAddressOneTitle"
                style="@style/H7BoldBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_89"
                android:layout_marginTop="30dp"
                android:text="@string/patient_add_address"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/roundedTextInput_addMbi" />

            <EditText
                android:id="@+id/editText_addAddressOne"
                style="@style/H6RegBlack"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:layout_marginHorizontal="@dimen/dp_53"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_input"
                android:imeOptions="actionNext"
                android:inputType="textNoSuggestions"
                android:paddingHorizontal="@dimen/dp_35"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_addAddressOneTitle" />

            <TextView
                android:id="@+id/textView_addAddressTwoTitle"
                style="@style/H7BoldBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_89"
                android:layout_marginTop="30dp"
                android:text="@string/patient_add_address2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/editText_addAddressOne" />

            <EditText
                android:id="@+id/editText_addAddressTwo"
                style="@style/H6RegBlack"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:layout_marginHorizontal="@dimen/dp_53"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_input"
                android:imeOptions="actionNext"
                android:inputType="textNoSuggestions"
                android:paddingHorizontal="@dimen/dp_35"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_addAddressTwoTitle" />

            <TextView
                android:id="@+id/textView_addCityTitle"
                style="@style/H7BoldBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_89"
                android:layout_marginTop="30dp"
                android:text="@string/patient_add_city"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/editText_addAddressTwo" />

            <EditText
                android:id="@+id/editText_addCity"
                style="@style/H6RegBlack"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:layout_marginHorizontal="@dimen/dp_53"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_input"
                android:inputType="textCapWords|textNoSuggestions"
                android:paddingHorizontal="@dimen/dp_35"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_addCityTitle"
                android:imeOptions="actionDone" />

            <TextView
                android:id="@+id/textView_addStateTitle"
                style="@style/H7BoldBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_89"
                android:layout_marginTop="30dp"
                android:text="@string/patient_add_state"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/editText_addCity" />

            <TextView
                android:id="@+id/textView_addState"
                style="@style/H6RegBlack"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_marginStart="@dimen/dp_53"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="@dimen/dp_20"
                android:background="@drawable/bg_picker_input"
                android:paddingTop="8dp"
                android:paddingHorizontal="@dimen/dp_35"
                app:layout_constraintEnd_toStartOf="@id/editText_addZip"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_addStateTitle" />

            <ImageView
                android:id="@+id/imageView_addStateDropdownIcon"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginEnd="@dimen/dp_30"
                android:rotation="270"
                android:scaleType="centerInside"
                android:src="@drawable/ic_back"
                app:layout_constraintBottom_toBottomOf="@id/textView_addState"
                app:layout_constraintEnd_toEndOf="@id/textView_addState"
                app:layout_constraintTop_toTopOf="@id/textView_addState" />

            <TextView
                android:id="@+id/textView_addZipTitle"
                style="@style/H7BoldBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_36"
                android:layout_marginTop="30dp"
                android:text="@string/patient_add_zipcode"
                app:layout_constraintStart_toStartOf="@id/editText_addZip"
                app:layout_constraintTop_toBottomOf="@id/editText_addCity" />

            <EditText
                android:id="@+id/editText_addZip"
                style="@style/H6RegBlack"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="@dimen/dp_53"
                android:background="@drawable/bg_input"
                android:digits="1234567890"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="5"
                android:paddingHorizontal="@dimen/dp_35"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/textView_addState"
                app:layout_constraintTop_toBottomOf="@id/textView_addZipTitle" />

            <TextView
                android:id="@+id/textView_addRaceTitle"
                style="@style/H7BoldBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_89"
                android:layout_marginTop="30dp"
                android:text="@string/patient_add_race"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/editText_addZip" />

            <TextView
                android:id="@+id/textView_addRace"
                style="@style/H6RegBlack"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:layout_marginHorizontal="@dimen/dp_53"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_picker_input"
                android:focusable="false"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dp_35"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_addRaceTitle" />

            <ImageView
                android:id="@+id/imageView_addRaceDropdownIcon"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginEnd="@dimen/dp_30"
                android:rotation="270"
                android:scaleType="centerInside"
                android:src="@drawable/ic_back"
                app:layout_constraintBottom_toBottomOf="@id/textView_addRace"
                app:layout_constraintEnd_toEndOf="@id/textView_addRace"
                app:layout_constraintTop_toTopOf="@id/textView_addRace" />

            <TextView
                android:id="@+id/textView_addEthnicityTitle"
                style="@style/H7BoldBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_89"
                android:layout_marginTop="30dp"
                android:text="@string/patient_add_ethnicity"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_addRace" />

            <TextView
                android:id="@+id/textView_addEthnicity"
                style="@style/H6RegBlack"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:layout_marginHorizontal="@dimen/dp_53"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_picker_input"
                android:focusable="false"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dp_35"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_addEthnicityTitle" />

            <ImageView
                android:id="@+id/imageView_addEthnicityDropdownIcon"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginEnd="@dimen/dp_30"
                android:rotation="270"
                android:scaleType="centerInside"
                android:src="@drawable/ic_back"
                app:layout_constraintBottom_toBottomOf="@id/textView_addEthnicity"
                app:layout_constraintEnd_toEndOf="@id/textView_addEthnicity"
                app:layout_constraintTop_toTopOf="@id/textView_addEthnicity" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_next"
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_32"
        android:layout_marginBottom="@dimen/dp_35"
        android:src="@drawable/ic_arrow_forward"
        android:contentDescription="@string/button_submit"
        app:backgroundTint="@color/legacy_fab_bg"
        app:elevation="@dimen/dp_2"
        app:fabCustomSize="@dimen/dp_106"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="@dimen/dp_64"
        app:rippleColor="@color/primary_white"
        app:tint="@color/primary_white" />
</androidx.constraintlayout.widget.ConstraintLayout>