<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_coral">

    <TextView
        android:id="@+id/checkout_complete_title"
        style="@style/H3RegWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_143"
        android:text="@string/patient_checkout_complete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/checkout_right_clipping_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/bg_rounded_corner_white_prompt"
        android:paddingBottom="@dimen/dp_37"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkout_complete_title">

        <TextView
            android:id="@+id/checkout_complete_patient_name"
            style="@style/H6BoldBlack"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_73"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginEnd="@dimen/dp_20"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintEnd_toStartOf="@id/checkout_edit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginEnd="@dimen/dp_95"
            tools:text="Bartlett, Meghan" />

        <TextView
            android:id="@+id/label_id"
            style="@style/BodySmlBoldBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/dp_6"
            android:text="@string/patient_lookup_id"
            app:layout_constraintStart_toStartOf="@id/checkout_complete_patient_name"
            app:layout_constraintTop_toBottomOf="@id/checkout_complete_patient_name" />

        <TextView
            android:id="@+id/patient_id"
            style="@style/BodySmlRegBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/dp_10"
            app:layout_constraintBottom_toBottomOf="@id/label_id"
            app:layout_constraintStart_toEndOf="@id/label_id"
            app:layout_constraintTop_toTopOf="@id/label_id"
            tools:text="0294534598" />

        <TextView
            android:id="@+id/label_dob"
            style="@style/BodySmlBoldBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_6"
            android:text="@string/patient_lookup_dob"
            app:layout_constraintStart_toEndOf="@id/patient_id"
            app:layout_constraintTop_toBottomOf="@id/checkout_complete_patient_name" />

        <TextView
            android:id="@+id/patient_dob"
            style="@style/BodySmlRegBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/dp_10"
            app:layout_constraintBottom_toBottomOf="@id/label_dob"
            app:layout_constraintStart_toEndOf="@id/label_dob"
            app:layout_constraintTop_toTopOf="@id/label_dob"
            tools:text="0294534598" />

        <TextView
            android:id="@+id/patient_shot_administered"
            style="@style/BodyRegBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            app:layout_constraintStart_toStartOf="@id/label_id"
            app:layout_constraintTop_toBottomOf="@id/label_id"
            tools:text="3 Shots Administered" />

        <ImageView
            android:id="@+id/checkout_edit"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_65"
            android:layout_marginEnd="@dimen/dp_22"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_edit"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/checkout_complete_patient_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/checkout_complete_patient_name"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/add_family_member"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_marginHorizontal="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_60"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/check_out_another"
        app:layout_constraintTop_toBottomOf="@id/ehr_container"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_corner_white"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/patient_parent_guardian_flu_shots"
                style="@style/H6BoldBlack"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:background="@drawable/bg_rounded_corner_white_top"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_73"
                android:paddingTop="@dimen/dp_18"
                android:paddingEnd="@dimen/dp_20"
                android:text="@string/patient_parent_guardian_flu_shots" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_11">

                    <LinearLayout
                        android:id="@+id/patient_parent_family_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        android:orientation="vertical" />

                    <TextView
                        android:id="@+id/patient_parent_insured_name"
                        style="@style/H6BoldBlack"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_110"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        android:background="@drawable/bg_rounded_corner_primary_light_gray"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp_63"
                        android:paddingEnd="@dimen/dp_20"
                        android:singleLine="true"
                        tools:text="Bartlett, Joseph" />

                    <TextView
                        android:id="@+id/patient_add_parent"
                        style="@style/H6BoldBlack"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_110"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_6"
                        android:background="@drawable/bg_rounded_corner_primary_light_gray"
                        android:drawablePadding="@dimen/dp_20"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp_63"
                        android:paddingEnd="@dimen/dp_20"
                        android:text="@string/patient_add_parent"
                        app:drawableStartCompat="@drawable/ic_plus" />
                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ehr_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/bg_rounded_corner_white_prompt"
        android:paddingBottom="@dimen/dp_37"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/checkout_right_clipping_bg"
        app:layout_constraintStart_toStartOf="@id/checkout_right_clipping_bg"
        app:layout_constraintTop_toBottomOf="@id/checkout_right_clipping_bg"
        tools:visibility="visible">

        <TextView
            android:id="@+id/ehr_title"
            style="@style/H6BoldBlack"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_73"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginEnd="@dimen/dp_95"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/add_appointments_to_ehr_dialog_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ehr_message"
            style="@style/H6RegBlack"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_20"
            android:text="@string/add_appointments_to_ehr_dialog_body"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/ehr_title"
            app:layout_constraintStart_toStartOf="@id/ehr_title"
            app:layout_constraintTop_toBottomOf="@id/ehr_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/check_out_another"
        style="@style/BodyBoldWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_34"
        android:background="?attr/selectableItemBackground"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_5"
        android:text="@string/patient_checkout_complete_another"
        app:layout_constraintBottom_toTopOf="@id/checkout_log_out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/checkout_log_out"
        style="@style/PrimaryPurpleButton"
        android:layout_width="@dimen/dp_400"
        android:layout_height="@dimen/dp_108"
        android:layout_marginBottom="@dimen/dp_52"
        android:gravity="center"
        android:text="@string/log_out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>