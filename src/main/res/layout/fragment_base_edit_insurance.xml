<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.vaxcare.vaxhub.core.view.VaxToolbar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_back"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.camera.view.PreviewView
        android:id="@+id/preview_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:scaleType="fillCenter" />

    <com.vaxcare.vaxhub.core.ui.ViewfinderView
        android:id="@+id/view_camera_capture"
        android:layout_width="@dimen/dp_520"
        android:layout_height="@dimen/dp_1100"
        android:layout_marginTop="@dimen/dp_72"
        android:layout_marginEnd="@dimen/dp_65"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:inner_corner_color="@color/primary_purple"
        app:inner_corner_length_vertical="@dimen/dp_50"
        app:inner_corner_length_horizontal="@dimen/dp_36"
        app:inner_width="@dimen/dp_477"
        app:inner_height="@dimen/dp_700"
        app:inner_stroke_width="@dimen/dp_6"
        app:show_mask="false" />


    <com.vaxcare.vaxhub.core.ui.CutOutView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cutout_width="@dimen/dp_520"
        app:cutout_height="@dimen/dp_1100"
        app:cutout_padding_start="@dimen/dp_135"
        app:cutout_padding_top="@dimen/dp_72" />

    <TextView
        android:id="@+id/capture_title"
        style="@style/CaptureTipCurrent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="300dp"
        android:rotation="90"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_camera_capture"
        app:layout_constraintBottom_toBottomOf="@id/view_camera_capture"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Capture front of insurance card" />

    <ImageView
        android:id="@+id/view_camera_preview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/view_camera_capture"
        app:layout_constraintEnd_toEndOf="@id/view_camera_capture"
        app:layout_constraintStart_toStartOf="@id/view_camera_capture"
        app:layout_constraintTop_toTopOf="@id/view_camera_capture" />

    <ProgressBar
        android:id="@+id/photo_check_progress_bar"
        android:layout_width="@dimen/dp_52"
        android:layout_height="@dimen/dp_52"
        android:layout_marginTop="@dimen/dp_224"
        android:indeterminateDrawable="@drawable/progress_circle_purple"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/view_camera_capture"
        app:layout_constraintStart_toStartOf="@id/view_camera_capture"
        app:layout_constraintTop_toTopOf="@id/view_camera_capture"
        app:layout_constraintBottom_toBottomOf="@id/view_camera_capture" />

    <TextView
        android:id="@+id/capture_hold_card"
        style="@style/H6BoldBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_60"
        android:fontFamily="@font/graphik_regular_italic"
        android:gravity="center"
        android:text="@string/patient_edit_hold_card"
        android:visibility="gone"
        android:textColor="@color/primary_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_camera_capture" />

    <ImageView
        android:id="@+id/camera_capture_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="@dimen/dp_101"
        android:background="@drawable/ic_shutter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/cancel_capture_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/ic_close"
        android:backgroundTint="@color/primary_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>