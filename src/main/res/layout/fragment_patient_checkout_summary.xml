<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.vaxcare.vaxhub.core.view.VaxToolbar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/summary" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_vaccines"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_15"
        app:layout_constraintBottom_toTopOf="@id/layout_patient_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        tools:itemCount="4"
        tools:listitem="@layout/rv_checkout_vaccine_item" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_patient_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_patient_consent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_240"
                android:layout_marginEnd="@dimen/dp_40"
                android:background="@drawable/bg_rounded_corner_patient_consent"
                android:paddingStart="@dimen/dp_49"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/patient_consent"
                    style="@style/NotesSpecsBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_22"
                    android:text="@string/patient_consent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/patient_checkout_advisory"
                    style="@style/NotesSpecsRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginEnd="@dimen/dp_220"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/patient_consent"
                    tools:text="@string/patient_checkout_advisory_display" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Space
                android:id="@+id/anchor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_250"
                android:layout_marginBottom="@dimen/dp_250"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/checkout_btn"
                android:layout_width="@dimen/dp_300"
                android:layout_height="@dimen/dp_300"
                android:background="@drawable/bg_circle_button_primary_coral"
                android:scaleType="centerInside"
                android:src="@drawable/ic_checkout"
                app:layout_constraintStart_toEndOf="@id/anchor"
                app:layout_constraintTop_toBottomOf="@id/anchor"
                app:tint="@color/primary_white" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/collect_payment_info"
            style="@style/PrimaryPurpleButton"
            android:layout_width="@dimen/dp_400"
            android:layout_height="@dimen/dp_98"
            android:layout_marginBottom="@dimen/dp_60"
            android:text="@string/med_d_copay_collect_payment_info"
            android:textSize="@dimen/sp_32"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="visible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/loading_container"
        android:orientation="vertical"
        android:background="@color/primary_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_360"
            android:layout_marginStart="@dimen/dp_90"
            android:layout_marginEnd="@dimen/dp_90"
            android:gravity="center_horizontal"
            android:text="@string/fragment_checkout_stock_saving_info"
            android:textSize="@dimen/sp_36"
            style="@style/H6RegBlack"
            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/loading"
            android:layout_marginTop="@dimen/dp_58"
            android:layout_width="@dimen/dp_250"
            android:layout_height="@dimen/dp_250"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:scaleType="center"
            android:src="@drawable/ic_loading"
            tools:visibility="visible"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>