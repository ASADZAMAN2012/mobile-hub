<com.vaxcare.vaxhub.core.view.TrayLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tray_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?drawerBackground">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color">

        <FrameLayout
            android:id="@+id/fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true">

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/nav_host"
                android:name="androidx.navigation.fragment.NavHostFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:defaultNavHost="true"
                app:navGraph="@navigation/nav_graph" />
        </FrameLayout>

        <TextView
            android:id="@+id/build_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="@dimen/content_margin"
            android:layout_marginBottom="@dimen/dp_15"
            android:textColor="#FF0000"
            android:textSize="16sp"
            tools:text="Build Version Information:" />

        <FrameLayout
            android:id="@+id/action_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/vaxcare_action_bar_size"
            android:layout_gravity="bottom"
            android:background="?dialogBackground"
            android:elevation="4dp"
            android:visibility="gone" />

        <com.vaxcare.vaxhub.core.view.ToastNotificationView
            android:id="@+id/toast_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="@dimen/dp_105"
            android:background="@drawable/bg_rounded_corner_white"
            android:elevation="@dimen/dp_4"
            android:fromAlpha="0.0"
            android:visibility="gone"
            tools:ignore="RtlHardcoded"
            tools:visibility="visible" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.vaxcare.vaxhub.ui.admin.ControlPanelView
        android:id="@+id/control_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        android:id="@+id/status_bar_icons"
        layout="@layout/view_status_bar_icons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</com.vaxcare.vaxhub.core.view.TrayLayout>