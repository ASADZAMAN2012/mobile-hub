<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_white"
    android:paddingTop="@dimen/dp_42"
    android:paddingBottom="@dimen/dp_25">

    <ImageView
        android:id="@+id/toolbar_icon"
        android:layout_width="@dimen/dp_55"
        android:layout_height="@dimen/dp_55"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_48"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/dp_5"
        android:src="@drawable/ic_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_icon"
        app:layout_constraintEnd_toStartOf="@id/right_icon1"
        app:layout_constraintStart_toEndOf="@id/toolbar_icon"
        app:layout_constraintTop_toTopOf="@id/toolbar_icon">

        <TextView
            android:id="@+id/toolbar_title"
            style="@style/ToolbarTitleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_4"
            android:text="@string/admin_fragment_header_vaxcare_admin_login"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/right_icon1"
        android:layout_width="@dimen/dp_55"
        android:layout_height="@dimen/dp_55"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_28"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/dp_5"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_icon"
        app:layout_constraintEnd_toStartOf="@id/right_icon2"
        app:layout_constraintTop_toTopOf="@id/toolbar_icon"
        tools:src="@drawable/ic_kebab_menu"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/right_icon2"
        android:layout_width="@dimen/dp_55"
        android:layout_height="@dimen/dp_55"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_28"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/dp_5"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/toolbar_icon"
        tools:src="@drawable/ic_kebab_menu"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sub_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_icon"
        tools:visibility="visible">

        <TextView
            android:id="@+id/toolbar_sub_title"
            style="@style/H6BoldBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_85"
            android:layout_marginEnd="@dimen/dp_125"
            android:ellipsize="end"
            android:maxWidth="@dimen/dp_500"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="John Smith" />

        <ImageView
            android:id="@+id/toolbar_sub_icon"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_8"
            android:scaleType="centerInside"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@id/toolbar_sub_title"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_eligibility_guaranteed"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/toolbar_sub_info"
            style="@style/BodySmlBoldBlack"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/toolbar_sub_icon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="med d"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>