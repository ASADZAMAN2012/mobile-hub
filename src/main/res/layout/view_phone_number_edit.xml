<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/phone_title"
        style="@style/H7BoldBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_89"
        android:text="@string/patient_add_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/required"
        style="@style/H33ItalicBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/graphik_regular_italic"
        android:textColor="@color/primary_dark_gray"
        android:textSize="15sp"
        android:text="@string/required"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/phone_title"
        tools:visibility="visible"/>

    <EditText
        android:id="@+id/phone_start"
        style="@style/H6RegBlack"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_80"
        android:layout_marginStart="@dimen/dp_53"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_rounded_corner_left"
        android:digits="1234567890"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:inputType="phone"
        android:maxLength="3"
        app:layout_constraintEnd_toStartOf="@id/phone_mid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone_title" />

    <EditText
        android:id="@+id/phone_mid"
        style="@style/H6RegBlack"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_80"
        android:layout_marginHorizontal="@dimen/dp_26"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_rounded_corner_mid"
        android:digits="1234567890"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:inputType="phone"
        android:maxLength="3"
        app:layout_constraintEnd_toStartOf="@id/phone_end"
        app:layout_constraintStart_toEndOf="@id/phone_start"
        app:layout_constraintTop_toBottomOf="@id/phone_title" />

    <EditText
        android:id="@+id/phone_end"
        style="@style/H6RegBlack"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_80"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="@dimen/dp_53"
        android:background="@drawable/bg_rounded_corner_right"
        android:digits="1234567890"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:inputType="phone"
        android:maxLength="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/phone_mid"
        app:layout_constraintTop_toBottomOf="@id/phone_title" />

    <TextView
        android:id="@+id/error_label"
        style="@style/H33ItalicBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/graphik_regular_italic"
        android:textColor="@color/error_red"
        android:textSize="15sp"
        android:text="@string/patient_add_enter_phone"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@id/phone_title"
        app:layout_constraintTop_toBottomOf="@id/phone_start"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>