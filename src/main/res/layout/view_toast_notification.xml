<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notification_box"
    android:layout_width="@dimen/dp_580"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingTop="@dimen/dp_4"
    android:paddingBottom="@dimen/dp_30"
    tools:background="@drawable/bg_rounded_corner_white">

    <ImageView
        android:id="@+id/close"
        android:layout_width="@dimen/toast_icon_size"
        android:layout_height="@dimen/toast_icon_size"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:paddingHorizontal="@dimen/dp_12"
        android:paddingVertical="@dimen/dp_12"
        android:src="@drawable/ic_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/header"
        style="@style/VaxCareText.32.Bold.PrimaryBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_2"
        android:paddingBottom="@dimen/dp_6"
        android:text="@string/internet_reconnected"
        app:layout_constraintBottom_toBottomOf="@id/close"
        app:layout_constraintStart_toEndOf="@id/close"
        app:layout_constraintTop_toTopOf="@id/close" />

    <TextView
        android:id="@+id/message"
        style="@style/VaxCareText.Regular.24.PrimaryBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:paddingStart="@dimen/dp_71"
        android:paddingEnd="@dimen/dp_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        tools:text="@string/internet_connection_small" />

</androidx.constraintlayout.widget.ConstraintLayout>