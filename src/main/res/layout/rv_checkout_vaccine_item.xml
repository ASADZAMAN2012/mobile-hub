<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    app:cardCornerRadius="@dimen/dp_10"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_rounded_checkout_item">

        <FrameLayout
            android:id="@+id/btnSwipeAction"
            android:layout_width="@dimen/dp_150"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/checkout_vaccine_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_close_white"
                tools:ignore="MissingConstraints" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_white"
        android:paddingTop="@dimen/dp_30">

        <TextView
            android:id="@+id/checkout_vaccine_tips"
            style="@style/BodyItalicBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_74"
            android:paddingBottom="@dimen/dp_4"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/med_d_checkout_vaccine_copay_required"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/checkout_vaccine_issues"
            style="@style/BodyItalicBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_74"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/checkout_vaccine_tips"
            tools:ignore="RtlHardcoded"
            tools:text="Out of Age Indication"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/checkout_vaccine_icon"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_6"
            android:scaleType="centerInside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/checkout_vaccine_name"
            tools:src="@drawable/ic_presentation_prefilled_syringe" />

        <TextView
            android:id="@+id/checkout_vaccine_name"
            style="@style/H6BoldBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_74"
            android:layout_marginEnd="@dimen/dp_25"
            android:textSize="@dimen/sp_40"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/checkout_vaccine_issues"
            tools:text="Hep-B (Engerix-B)" />

        <TextView
            android:id="@+id/checkout_vaccine_lot_number"
            style="@style/BodyRegBlack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintStart_toStartOf="@id/checkout_vaccine_name"
            app:layout_constraintTop_toBottomOf="@id/checkout_vaccine_name"
            tools:text="XYZ1232GGF" />

        <TextView
            android:id="@+id/checkout_vaccine_site"
            style="@style/BodyBoldBlack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_36"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_22"
            android:gravity="end"
            android:text="@string/patient_checkout_set_site"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/checkout_vaccine_lot_number"
            app:layout_constraintTop_toBottomOf="@id/checkout_vaccine_lot_number" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pipe_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/checkout_vaccine_site"
            app:layout_constraintStart_toEndOf="@id/checkout_vaccine_site"
            app:layout_constraintTop_toTopOf="@id/checkout_vaccine_site"
            tools:visibility="visible">

            <View
                android:id="@+id/pipe"
                android:layout_width="@dimen/dp_2"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/dp_36"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/checkout_vaccine_route"
                style="@style/BodyBoldBlack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_36"
                android:gravity="center"
                android:text="@string/patient_checkout_set_route"
                app:layout_constraintBottom_toBottomOf="@id/pipe"
                app:layout_constraintStart_toEndOf="@id/pipe"
                app:layout_constraintTop_toTopOf="@id/pipe"
                app:layout_goneMarginTop="@dimen/dp_0" />

            <TextView
                android:id="@+id/checkout_dose_series"
                style="@style/BodyBoldBlack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_36"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@id/pipe"
                app:layout_constraintStart_toEndOf="@id/pipe"
                app:layout_constraintTop_toTopOf="@id/pipe"
                tools:text="1st Dose"
                tools:visibility="gone" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:id="@+id/button_delete"
            android:layout_width="@dimen/dp_96"
            android:layout_height="@dimen/dp_96"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_8"
                android:src="@drawable/ic_delete" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
