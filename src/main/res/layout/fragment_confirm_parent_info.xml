<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.vaxcare.vaxhub.core.view.VaxToolbar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/patient_confirm_parent_info" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/patient_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_11"
                android:layout_marginTop="@dimen/dp_55"
                android:background="@drawable/bg_rounded_corner_white_prompt"
                android:paddingTop="@dimen/dp_22"
                android:paddingBottom="@dimen/dp_50"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/patient_name"
                    style="@style/H6BoldBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="@dimen/dp_73"
                    android:lineSpacingMultiplier="0.8"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Bartlett, Meghan" />

                <View
                    android:id="@+id/left_dash"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_4"
                    android:layout_marginTop="@dimen/dp_36"
                    android:background="@drawable/bg_rounded_corner_primary_black"
                    app:layout_constraintStart_toStartOf="@id/patient_name"
                    app:layout_constraintTop_toBottomOf="@id/patient_name" />

                <TextView
                    android:id="@+id/label_dob"
                    style="@style/H8BoldBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/patient_confirm_parent_dob"
                    app:layout_constraintStart_toStartOf="@id/patient_name"
                    app:layout_constraintTop_toBottomOf="@id/left_dash" />

                <TextView
                    android:id="@+id/patient_dob"
                    style="@style/H7RegBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="@dimen/dp_1"
                    app:layout_constraintStart_toStartOf="@id/patient_name"
                    app:layout_constraintTop_toBottomOf="@id/label_dob"
                    tools:text="0294534598" />

                <TextView
                    android:id="@+id/label_gender"
                    style="@style/H8BoldBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_23"
                    android:text="@string/patient_confirm_parent_gender"
                    app:layout_constraintStart_toStartOf="@id/patient_name"
                    app:layout_constraintTop_toBottomOf="@id/patient_dob" />

                <TextView
                    android:id="@+id/patient_gender"
                    style="@style/H7RegBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="@dimen/dp_1"
                    app:layout_constraintStart_toStartOf="@id/patient_name"
                    app:layout_constraintTop_toBottomOf="@id/label_gender"
                    tools:text="Male" />

                <TextView
                    android:id="@+id/label_phone"
                    style="@style/H8BoldBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_23"
                    android:text="@string/patient_confirm_parent_phone"
                    app:layout_constraintStart_toStartOf="@id/patient_name"
                    app:layout_constraintTop_toBottomOf="@id/patient_gender" />

                <TextView
                    android:id="@+id/patient_phone"
                    style="@style/H7RegBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="@dimen/dp_1"
                    app:layout_constraintStart_toStartOf="@id/patient_name"
                    app:layout_constraintTop_toBottomOf="@id/label_phone"
                    tools:text="267-867-5309" />

                <TextView
                    android:id="@+id/label_address"
                    style="@style/H8BoldBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_23"
                    android:text="@string/patient_confirm_parent_address"
                    app:layout_constraintStart_toStartOf="@id/patient_name"
                    app:layout_constraintTop_toBottomOf="@id/patient_phone" />

                <TextView
                    android:id="@+id/patient_address"
                    style="@style/H7RegBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="@dimen/dp_1"
                    android:lineSpacingExtra="@dimen/dp_10"
                    app:layout_constraintStart_toStartOf="@id/patient_name"
                    app:layout_constraintTop_toBottomOf="@id/label_address"
                    tools:text="1101 S. Front Street\nPhiladelphia, PA\n19102" />

                <TextView
                    android:id="@+id/label_insurance_provider"
                    style="@style/H8BoldBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_23"
                    android:text="@string/patient_confirm_parent_insurance_provider"
                    app:layout_constraintStart_toStartOf="@id/patient_name"
                    app:layout_constraintTop_toBottomOf="@id/patient_address" />

                <TextView
                    android:id="@+id/patient_insurance_provider"
                    style="@style/H7RegBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="@dimen/dp_1"
                    app:layout_constraintStart_toStartOf="@id/patient_name"
                    app:layout_constraintTop_toBottomOf="@id/label_insurance_provider"
                    tools:text="Highmark Choice Company" />

                <TextView
                    android:id="@+id/label_provider"
                    style="@style/H8BoldBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_23"
                    android:text="@string/patient_confirm_parent_provider"
                    app:layout_constraintStart_toStartOf="@id/patient_name"
                    app:layout_constraintTop_toBottomOf="@id/patient_insurance_provider" />

                <TextView
                    android:id="@+id/patient_provider"
                    style="@style/H7RegBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="?attr/selectableItemBackground"
                    android:drawableEnd="@drawable/ic_edit"
                    android:drawablePadding="@dimen/dp_66"
                    app:layout_constraintStart_toStartOf="@id/patient_name"
                    app:layout_constraintTop_toBottomOf="@id/label_provider"
                    tools:text="Dr.Jiminez" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_ok"
                style="@style/PrimaryPurpleButton"
                android:layout_width="@dimen/dp_400"
                android:layout_height="@dimen/dp_110"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_187"
                android:text="@string/patient_confirm_parent_confirm"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/patient_container" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_cancel"
                style="@style/PrimaryGrayButton"
                android:layout_width="@dimen/dp_400"
                android:layout_height="@dimen/dp_110"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_60"
                android:text="@string/patient_confirm_parent_edit_info"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_ok" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>